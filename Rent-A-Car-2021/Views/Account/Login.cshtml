@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Login</h4>
<form asp-action="Login" asp-controller="Account" method="post">
    <table style="width:100%;margin:5%;">
        <tr>
            <td>Username</td>
            <td>
                <input id="txtUsername" name="username" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>Password</td>
            <td>
                <input id="txtPassword" name="password" type="password" class="form-control password" />
            </td>
        </tr>
    </table>
    <button type="submit" class="button btn-lg btn-info">Login</button>
</form>